<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="618.0" prefWidth="1000.0" stylesheets="@../customer.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.view.customerui.customerui.PersonInfoPageController">
   <children>
      <VBox alignment="CENTER" layoutX="18.0" layoutY="142.0" prefHeight="229.0" prefWidth="219.0" spacing="10.0">
         <children>
            <ImageView fx:id="headImageView" fitHeight="125.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../CustomerImage/个人信息-2.png" />
               </image>
            </ImageView>
            <Button fx:id="editImageButton" mnemonicParsing="false" onAction="#editImage" prefHeight="27.0" prefWidth="126.0" text="上传头像">
               <styleClass>
                  <String fx:value="whiteFont" />
                  <String fx:value="transButton" />
                  <String fx:value="backButtonColor" />
               </styleClass></Button>
            <Button fx:id="vipEnrollButton" mnemonicParsing="false" onAction="#enroll" prefHeight="27.0" prefWidth="126.0" text="注册会员">
               <styleClass>
                  <String fx:value="whiteFont" />
                  <String fx:value="transButton" />
                  <String fx:value="backButtonColor" />
               </styleClass></Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER_LEFT" layoutX="237.0" layoutY="80.0" prefHeight="335.0" prefWidth="741.0">
         <children>
            <VBox alignment="CENTER" prefHeight="335.0" prefWidth="121.0" spacing="35.0">
               <children>
                  <Label text="姓名">
                     <styleClass>
                        <String fx:value="titleLabel" />
                        <String fx:value="backButtonColor" />
                     </styleClass></Label>
                  <Label text="生日">
                     <styleClass>
                        <String fx:value="titleLabel" />
                        <String fx:value="backButtonColor" />
                     </styleClass></Label>
                  <Label text="联系方式">
                     <styleClass>
                        <String fx:value="titleLabel" />
                        <String fx:value="backButtonColor" />
                     </styleClass></Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="220.0" prefWidth="12.0">
               <children>
                  <Separator orientation="VERTICAL" prefHeight="292.0" prefWidth="1.0" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="419.0" prefWidth="606.0" spacing="10.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="49.0" prefWidth="371.0">
                     <children>
                        <TextField fx:id="nameField" prefHeight="34.0" prefWidth="504.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="49.0" prefWidth="354.0">
                     <children>
                        <DatePicker fx:id="yearPicker" prefHeight="38.0" prefWidth="504.0" promptText="年-月-日" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="49.0" prefWidth="371.0">
                     <children>
                        <TextField fx:id="number" prefHeight="38.0" prefWidth="504.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
      <Button fx:id="backButton" layoutX="21.0" layoutY="22.0" mnemonicParsing="false" onAction="#back" prefHeight="38.0" prefWidth="91.0">
         <styleClass>
            <String fx:value="transButton" />
            <String fx:value="backButtonColor" />
         </styleClass>
         <graphic>
            <ImageView fitHeight="27.0" fitWidth="82.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../CustomerImage/返回-2.png" />
               </image>
            </ImageView>
         </graphic></Button>
      <Button fx:id="saveButton" layoutX="479.0" layoutY="446.0" mnemonicParsing="false" onAction="#save" prefHeight="32.0" prefWidth="120.0" text="保存">
         <styleClass>
            <String fx:value="backButtonColor" />
            <String fx:value="whiteFont" />
         </styleClass></Button>
   </children>
</AnchorPane>
